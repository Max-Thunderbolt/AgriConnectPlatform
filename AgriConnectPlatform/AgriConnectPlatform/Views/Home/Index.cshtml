@{
    ViewData["Title"] = "Welcome to AgriConnect";
}

<!-- Hero Section -->
<section class="landing-hero d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 90vh; background: linear-gradient(120deg, #1a1a1a 60%, #4CAF50 100%); color: #fff;">
    <h1 class="display-2 fw-bold mb-3" style="letter-spacing: 2px;">AgriConnect Platform</h1>
    <p class="lead mb-4" style="max-width: 600px;">
        Connecting <span style="color: #4CAF50; font-weight: 600;">farmers</span>, <span style="color: #FFD600; font-weight: 600;">green energy experts</span>, and <span style="color: #00BFAE; font-weight: 600;">enthusiasts</span> for a sustainable future in agriculture.
    </p>
    <div class="scroll-down-cue mt-5">
        <span style="font-size: 2rem; color: #FFD600;">&#8595;</span>
        <p class="mt-2" style="color: #b3b3b3;">Scroll to learn more</p>
    </div>
</section>

<!-- Mission Section -->
<section class="py-5" style="background: #232323; color: #fff;">
    <div class="container">
        <h2 class="mb-3" style="color: #4CAF50;">Our Mission</h2>
        <p class="lead" style="max-width: 700px;">
            AgriConnect is dedicated to bridging the gap between traditional farming and modern sustainability. We empower farmers and green energy experts to share knowledge, products, and solutions that make agriculture more resilient and eco-friendly.
        </p>
    </div>
</section>

<!-- Vision Section -->
<section class="py-5" style="background: #181818; color: #fff;">
    <div class="container">
        <h2 class="mb-3" style="color: #FFD600;">Our Vision</h2>
        <p class="lead" style="max-width: 700px;">
            We envision a world where every farm is sustainable, every farmer is empowered, and every community thrives through innovation and collaboration. By connecting passionate individuals and experts, we're building the future of farming—together.
        </p>
    </div>
</section>

<!-- Impact Section -->
<section class="py-5" style="background: #232323; color: #fff;">
    <div class="container">
        <h2 class="mb-3" style="color: #00BFAE;">Your Impact</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="display-5" style="color: #4CAF50;">🌱</div>
                <h4 class="mt-2">Support Sustainable Farming</h4>
                <p>Help farmers adopt eco-friendly practices and technologies.</p>
            </div>
            <div class="col-md-4 mb-4">
                <div class="display-5" style="color: #FFD600;">🔋</div>
                <h4 class="mt-2">Fund Green Innovation</h4>
                <p>Enable research and projects in renewable energy for agriculture.</p>
            </div>
            <div class="col-md-4 mb-4">
                <div class="display-5" style="color: #00BFAE;">🤝</div>
                <h4 class="mt-2">Grow the Community</h4>
                <p>Connect like-minded people to share knowledge and resources.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 text-center" style="background: linear-gradient(120deg, #1a1a1a 60%, #4CAF50 100%); color: #fff;">
    <div class="container">
        <h2 class="mb-4 fw-bold">Be Part of the Future of Farming</h2>
        <p class="lead mb-4" style="max-width: 600px; margin: 0 auto;">
            Your donation helps us empower farmers, fund green projects, and build a more sustainable world. Join us on this journey!
        </p>
        <a href="/donate" class="btn btn-lg btn-success px-5 py-3 shadow" style="font-size: 1.3rem;">Donate Now</a>
    </div>
</section>
